{
	"name": "ismailivolunteer",
	"version": "0.1.0",
	"description": "Ismaili Volunteer Listings",
	"main": "none",
	"private": true,
	"scripts": {
		"scss": "./node_modules/.bin/node-sass -r ./styles -o ./static/styles --include-path ./node_modules --output-style compressed",
		"styles": "npm run scss && ./node_modules/.bin/postcss static/styles/*.css --replace",
		"images": "cp -r images static",
		"modernizr": "./node_modules/.bin/modernizr -c modernizr-config.json -d static/scripts",
		"rollup": "./node_modules/.bin/rollup -c ./rollup.config.js",
		"scripts": "npm run modernizr && npm run rollup",
		"fontawesome": "cp -r node_modules/font-awesome/fonts/ fonts",
		"fonts": "npm run fontawesome && cp -r fonts static",
		"public": "cp -r public/ static",
		"social_prepare": "rm -rf content/__social && cp -r content/listings content/__social",
		"social_puppeteer": "./node_modules/.bin/babel ./puppeteer/social.js | node",
		"social": "npm run social_prepare && npm run social_puppeteer",
		"static": "rm -rf ./static && npm run styles && npm run public && npm run images && npm run scripts && npm run fonts && npm run social",
		"minify_html": "./node_modules/.bin/html-minifier --collapse-whitespace --remove-comments --minify-js --minify-css --file-ext html --input-dir ./dist --output-dir ./dist",
		"minify_scripts": "find . -path '*dist/scripts*' -name '*.js' -exec ./node_modules/.bin/uglifyjs '{}' -o '{}' ';'",
		"minify_images": "find . -path '*dist/images*' -exec bash -c './node_modules/.bin/imagemin {} --out-dir `dirname {}`' ';'",
		"minify": "npm run minify_html && npm run minify_scripts",
		"compile": "rm -rf ./dist && npm run static && npm run public && hugo && npm run minify"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ismailivolunteer/ismailivolunteer.git"
	},
	"author": "Alizain Feerasta",
	"license": "UNLICENSED",
	"bugs": {
		"url": "https://github.com/ismailivolunteer/ismailivolunteer/issues"
	},
	"homepage": "https://github.com/ismailivolunteer/ismailivolunteer#readme",
	"unusedDependencies": {
		"imagemin-cli": "^3.0.0",
		"imagemin-gifsicle": "^5.2.0",
		"imagemin-jpegtran": "^5.0.2",
		"imagemin-optipng": "^5.2.1",
		"imagemin-svgo": "^6.0.0"
	},
	"devDependencies": {
		"autoprefixer": "^6.7.7",
		"babel-cli": "^6.26.0",
		"babel-core": "^6.24.0",
		"babel-plugin-external-helpers": "^6.22.0",
		"babel-preset-env": "^1.6.1",
		"del": "^3.0.0",
		"eslint": "^3.15.0",
		"eslint-config-airbnb-base": "^11.1.0",
		"eslint-plugin-compat": "^1.0.1",
		"eslint-plugin-import": "^2.2.0",
		"eslint-plugin-promise": "^3.4.1",
		"html-minifier": "^3.4.2",
		"minimist": "^1.2.0",
		"mkdirp": "^0.5.1",
		"node-sass": "^4.4.0",
		"pinkie": "2.0.4",
		"postcss": "^5.2.17",
		"postcss-cli": "^3.1.1",
		"puppeteer": "^0.13.0",
		"rollup": "^0.53.3",
		"rollup-plugin-babel": "^3.0.3",
		"rollup-plugin-commonjs": "^8.2.6",
		"rollup-plugin-node-resolve": "^3.0.0",
		"rollup-watch": "^4.3.1",
		"uglify-js": "^2.8.22"
	},
	"dependencies": {
		"bootstrap": "4.0.0-beta.2",
		"font-awesome": "latest",
		"jquery": "^3.1.1",
		"jump.js": "^1.0.2",
		"modernizr": "^3.4.0",
		"parsleyjs": "^2.6.2"
	}
}
