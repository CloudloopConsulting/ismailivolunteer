{
  "name": "ismailivolunteer",
  "version": "0.1.0",
  "description": "Ismaili Volunteer Listings",
  "main": "none",
  "private": true,
  "scripts": {
	"scss": "./node_modules/.bin/node-sass -r ./styles -o ./static/styles --include-path ./node_modules --output-style compressed",
    "images": "mkdir -p static/images && cp -r images/ static/images/",
    "form_submit": "./node_modules/.bin/rollup -c rollup.config.js scripts/form_submit.js -o static/scripts/form_submit.js -n form_submit",
    "index_jumbotron": "./node_modules/.bin/rollup -c rollup.config.js scripts/index_jumbotron.js -o static/scripts/index_jumbotron.js -n index_jumbotron",
    "scripts": "npm run form_submit && npm run index_jumbotron",
    "static": "rm -rf ./static && npm run scss && npm run public && npm run images && npm run scripts",
	"public": "cp -r public/ dist",
	"minify": "./node_modules/.bin/html-minifier --collapse-whitespace --remove-comments --minify-js --minify-css --file-ext html --input-dir ./dist --output-dir ./dist",
    "compile": "npm run static && npm run public && hugo && npm run minify",
    "netlify": "npm run static && npm run public && hugo_0.19 && npm run minify"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ismailivolunteer/ismailivolunteer.git"
  },
  "author": "Alizain Feerasta",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/ismailivolunteer/ismailivolunteer/issues"
  },
  "homepage": "https://github.com/ismailivolunteer/ismailivolunteer#readme",
  "devDependencies": {
    "babel-core": "^6.24.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-latest": "^6.24.0",
    "eslint": "^3.15.0",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-compat": "^1.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-promise": "^3.4.1",
    "html-minifier": "^3.4.2",
    "node-sass": "^4.4.0",
    "rollup": "^0.41.4",
    "rollup-plugin-babel": "^2.7.1",
    "rollup-plugin-commonjs": "^7.0.0",
    "rollup-plugin-node-resolve": "^2.0.0",
    "rollup-watch": "^3.2.2"
  },
  "dependencies": {
    "bootstrap": "4.0.0-alpha.6",
    "jquery": "^3.1.1",
    "parsleyjs": "^2.6.2"
  }
}
